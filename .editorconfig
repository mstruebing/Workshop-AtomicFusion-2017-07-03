# editorconfig.org

# top-most EditorConfig file
root = false

[*]
end_of_line = lf
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.htaccess]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.js]
indent_style = tab

[*.php]
indent_style = space
indent_size = 4

[*.ts2,*.fusion]
indent_style = tab
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 2

[*.css,*.scss]
indent_style = tab
indent_size = 4
